<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_timezone"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_30"
        />

    <Spinner
        android:id="@+id/spinner_timezone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:foregroundTint="@color/grey_900"
        android:contentDescription="Timezone"
        android:minHeight="48dp"
        android:elevation="@dimen/space_4"
        app:layout_constraintEnd_toEndOf="@+id/cityNameContainer"
        app:layout_constraintStart_toStartOf="@+id/cityNameContainer"
        app:layout_constraintTop_toBottomOf="@+id/cityNameContainer" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/spinner_timezone"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_30"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_32"
        android:text="@string/submit"
        android:elevation="@dimen/space_8"
        android:background="@drawable/login_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_gmt_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textColor="@color/black"
        android:text="Current Time"
        app:layout_constraintEnd_toEndOf="@+id/cityNameContainer"
        app:layout_constraintStart_toStartOf="@+id/cityNameContainer"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />


    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GMT Difference"
        android:textColor="@color/black"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_timezone"
        app:layout_constraintStart_toStartOf="@+id/spinner_timezone"
        app:layout_constraintTop_toBottomOf="@+id/spinner_timezone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_current_time"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_30"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cityNameContainer"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_30"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cityNameContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gmt_time">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCityName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="Enter city name" />

    </com.google.android.material.textfield.TextInputLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>